.info-avatar-name{
    width: 100%;
    height: 150px;
    background-color: #fc8c7f;
    display: flex;
    flex-direction: column;
    margin-bottom: 15px;
}
.info-avatar-name image{
    border-radius: 50%;
    width: 50px;
    height: 50px;
    margin: 0 auto;
    margin-top: 45px;
}
.info-avatar-name text{
  margin: 0 auto;
