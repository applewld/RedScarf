.pubList-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.pubList-nav {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.add{
  background-color:#fff;
  height: 70rpx;
}
.add image {
  width: 70rpx;
  height: 70rpx;
}

.pubList-reward {
  width: 340rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #9b9b9b;
  font-size: 32rpx;
  background-color: #fff;
}

.pubList-wait {
  width: 340rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #9b9b9b;
  font-size: 32rpx;
  background-color: #fff;
}

.pubList-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  margin-bottom: 10px;
}

.content-time-money {
  margin: 10px auto 5px;
  width: 90%;
  height: 24px;
  line-height: 24px;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: #a8a7a7;
  justify-content: space-between;
  margin-top: 10px;
}

.pub-time {
  display: flex;
  flex-direction: row;
}

.index {
  display: block;
  height: 20px;
  width: 20px;
  text-align: center;
  line-height: 20px;
  border-radius: 50%;
  color: #000;
  background-color: #ccc;
  margin-right: 5px;
}

.pub-money {
  display: flex;
  flex-direction: row;
}

.pub-money image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
  margin-top: 2px;
  border-radius: 50%;
}

.notice-content {
  width: 90%;
  margin: 0 auto;
  word-wrap: break-word;
  font-size: 16px;
  color: #616161;
}

.status-btn {
  width: 90%;
  margin: 10px auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 14px;
  color: #a8a7a7;
}
.end-info{
  display: flex;
  flex-direction: row;
}
.end-info view{
  width: 40px;
  height: 20px;
  background-color: #fc8c7f;
  border-radius: 5px;
  color: #fff;
  text-align: center;
  line-height: 20px;
  margin-left: 5px;
}
.btn {
  width: 80px;
  height: 20px;
  background-color: #fc8c7f;
  border-radius: 5px;
  color: #fff;
  text-align: center;
  line-height: 20px;
}

.tab-bottom {
  border-bottom: 5px solid #fc8c7f;
  color: #616161;
}

page {
  background-color: #f3f3f3;
}


.none {
  width: 80%;
  margin: 20px auto;
  text-align: center;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid #ccc;
  color: #4b4747;
}
.new-info{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  text-align: left;
  position: fixed;
  bottom: 0px;
  background-color: white;
  color: #a8a7a7;
  padding-left: 10px;
}