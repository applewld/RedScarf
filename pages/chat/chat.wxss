.hei {
  margin-top: 50px;
  height: 20rpx;
}

.history {
  height: 1100rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  background-color: #ebebeb;
}

.other-record-content {
  background-color: #fff;
  word-break: break-all;
  max-width: 60%;
  height: auto;
  line-height: 70rpx;
  border-radius: 7px;
  padding: 0rpx 30rpx 0rpx 30rpx;
  margin: 10rpx 10rpx 0 0;
}

.other-record {
  display: flex;
  justify-content: flex-start;
}

.other-head-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 10rpx 10rpx 10rpx 20rpx;
}

.other-record-content-triangle {
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-right: 15rpx solid #fff;
  border-bottom: 10rpx solid transparent;
  margin-top: 30rpx;
}

.own-record {
  display: flex;
  justify-content: flex-end;
}

.own-record-content {
  background-color: #fff;
  max-width: 60%;
  height: auto;
  word-break: break-all;
  line-height: 70rpx;
  border-radius: 7px;
  padding: 0rpx 30rpx 0rpx 30rpx;
  margin: 10rpx 0 0 10rpx;
}

.own-record-content-triangle {
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-left: 15rpx solid #fff;
  border-bottom: 10rpx solid transparent;
  margin-top: 30rpx;
}

.own-head-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 10rpx 20rpx 10rpx 10rpx;
  /* padding-right: 30rpx; */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
