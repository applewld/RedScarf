.sendmessage {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
}

.sendmessage input {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  line-height: 80rpx;
  font-size: 34rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-left: 5rpx;
}

.sendmessage view {
  border: 2rpx solid #999;
  border-radius: 10rpx;
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #999;
  text-align: center;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

